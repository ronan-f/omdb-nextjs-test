datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int      @id @default(autoincrement())
  email  String
  Review Review[]
}

model Review {
  id         Int      @id @default(autoincrement())
  movie_id   String
  author_id  Int
  content    String?
  rating     Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  author     User     @relation(fields: [author_id], references: [id])
}
